@model List<Users> 
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="row col-6">
            <h2 class="text-primary">
                User List
            </h2>
        </div>
        <div class="row col-6 ">
            <a asp-controller="Users" asp-action="AddUser" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Add Users
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>

    
    <tr>
        <th>
            User Name
        </th>
        <th>    
            Status
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(i => i.Status)){
             <tr>
            <td>
                @obj.Name
            </td>
            <td>
                @obj.Status 
            </td>
                    <td>
                       <div class="w-50 btn-group" role="group">
                            <a asp-controller="Users" asp-action="Edit" asp-route-name="@obj.Name" class="btn">
                                <i class="bi bi-pencil-square">Edit</i>
                            </a>
                            <a asp-controller="Users" asp-action="Delete" class="btn">
                                <i class="bi bi-trash-fill">Delete</i>
                            </a>
                        </div>
                    </td>
        </tr>
        }
    </tbody>
</table>
</div>